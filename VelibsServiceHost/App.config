<?xml version="1.0" encoding="utf-8" ?>
<configuration>
 
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_ILog" />
      </basicHttpBinding>
    </bindings>
    <services>
      <service name="MathsLibrary.VelibInformationService">
        <endpoint address="" binding="wsDualHttpBinding" bindingConfiguration="" contract="MathsLibrary.VelibInformationService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9091/velibservicehost" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- These values should be false in production mode -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True" />
          <serviceDebug includeExceptionDetailInFaults="True" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>